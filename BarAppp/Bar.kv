<RightContentCls>:
    disabled: True
    adaptive_size: True
    pos_hint: {"center_y": .5}

    MDIconButton:
        icon: root.icon
        icon_size: "16sp"
        md_bg_color_disabled: 0, 0, 0, 0

    MDLabel:
        text: root.text
        font_style: "Caption"
        adaptive_size: True
        pos_hint: {"center_y": .5}


<Conteiner>:

    tables: table
    tables2: table2
    text_fild: text
    text_fild1: text1
    text_fild2: text2


    MDBottomNavigation:

        #panel_color: "#eeeaea"
        selected_color_background: "orange"


        MDBottomNavigationItem:

            name: 'screen 1'
            text: 'Таблица'



            on_tab_release:    root.table(0)

            FitImage:
                size_hint_y: 1
                source: 'background_image.jpg'


            MDScrollView:
                MDList:
                    id: table
        MDBottomNavigationItem:

            name: 'screen 4'
            text: 'Таблица Цен'
            on_tab_release:   root.table2()
            FitImage:
                size_hint_y: 1
                source: 'background_image.jpg'

            MDScrollView:
                MDList:
                    id: table2

        MDBottomNavigationItem:
            text: "Добавить"
            on_tab_press: root.text_input()
            FitImage:
                size_hint_y: 1
                source: 'background_image.jpg'


            BoxLayout:

                orientation: "vertical"
                padding: 40
                id: text


        MDBottomNavigationItem:
            name: 'screen 3'
            text: "Изменить"
            icon: 'linkedin'
            on_tab_press: root.edit_text()
            FitImage:
                size_hint_y: 1
                source: 'background_image.jpg'
            BoxLayout:

                orientation: "vertical"
                padding: 40
                id: text2

        MDBottomNavigationItem:
            name: 'screen 2'
            text: "Удалить"
            on_tab_press:   root.text_del()
            FitImage:
                size_hint_y: 1
                source: 'background_image.jpg'
            BoxLayout:

                orientation: "vertical"
                padding: 40
                id: text1


<ManipulationText>:
    height: text_field.height

    MDTextField:

        id: text_field

    MDTextField:
        id: text_field
        pos_hint: {"center_y": .3}

    MDTextField:
        id: text_field
        pos_hint: {"center_y": .2}





